<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Продукт</th>
      <th>Тип</th>
      <th>Тлф</th>
      <th>адресс</th>
      <th>статус</th>
      <th>email</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.product %></td>
        <td><%= order.product_type %></td>
        <td>
          <%=
            if (order.phone)
                   order.phone
             else
                   'null'
             end
          %>
        </td>
        <td><%= order.address %></td>
        <td><%= order.status %></td>
        <td><%= order.email %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

